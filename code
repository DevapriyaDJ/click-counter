  <h1>Click Counter Web App</h1>
  <div id="counter">0</div>
  <button onclick="increment()">Click Me!</button>

  <script>
    let count = 0;

    function increment() {
      count++;
      document.getElementById('counter').textContent = count;
    }
  </script>

